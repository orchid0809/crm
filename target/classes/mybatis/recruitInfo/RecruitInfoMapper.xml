<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="RecruitInfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		CRM_RECRUITINFO
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		RECRUIT_POSITION,	
		RECRUIT_CNT,	
		POSITION_REQUIRE,	
		RECRUIT_ID,	
		RECRUITINFO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{RECRUIT_POSITION},	
		#{RECRUIT_CNT},	
		#{POSITION_REQUIRE},	
		#{RECRUIT_ID},	
		#{RECRUITINFO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			RECRUITINFO_ID = #{RECRUITINFO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			RECRUIT_POSITION = #{RECRUIT_POSITION},
			RECRUIT_CNT = #{RECRUIT_CNT},
			POSITION_REQUIRE = #{POSITION_REQUIRE},
		RECRUITINFO_ID = RECRUITINFO_ID
		where 
		RECRUITINFO_ID = #{RECRUITINFO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			RECRUITINFO_ID = #{RECRUITINFO_ID}
	</select>
	
	<!-- 通过RECRUIT_ID获取数据 -->
	<select id="findByRecruitId" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			RECRUIT_ID = #{RECRUIT_ID}
		<if test="recruitPosition!= null and recruitPosition != ''"><!-- 关键词检索 -->
			and RECRUIT_POSITION LIKE CONCAT(CONCAT('%', #{recruitPosition}),'%')
		</if>
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="recruitPosition!= null and recruitPosition != ''"><!-- 关键词检索 -->
			and RECRUIT_POSITION LIKE CONCAT(CONCAT('%', #{recruitPosition}),'%')
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			RECRUITINFO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>